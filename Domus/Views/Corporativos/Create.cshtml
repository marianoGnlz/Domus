@model Domus.Models.Corporativo

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Corporativo</h1>
<hr />
<form asp-action="Create">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Domicilio" class="control-label"></label>
                            <input asp-for="Domicilio" class="form-control" />
                            <span asp-validation-for="Domicilio" class="text-danger"></span>
                        </div>
                </div>
                <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Nacionalidad" class="control-label"></label>
                            <input asp-for="Nacionalidad" class="form-control" />
                            <span asp-validation-for="Nacionalidad" class="text-danger"></span>
                        </div>
                </div>
                <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="RazonSocial" class="control-label"></label>
                            <input asp-for="RazonSocial" class="form-control" />
                            <span asp-validation-for="RazonSocial" class="text-danger"></span>
                        </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CUIT" class="control-label"></label>
                            <input asp-for="CUIT" class="form-control" />
                            <span asp-validation-for="CUIT" class="text-danger"></span>
                        </div>
                </div>
                <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="NroCuenta" class="control-label"></label>
                            <input asp-for="NroCuenta" class="form-control" />
                            <span asp-validation-for="NroCuenta" class="text-danger"></span>
                        </div>
                </div>
            </div>
            <div class="row justify-content-center mt-3">
                <div class="form-group col-md-4">
                    <input type="submit" value="Create" class="btn btn-primary w-100" />
                </div>
            </div>
        </div>
    </div>
</form>

<div class="mt-3">
    <a asp-action="Index" class="d-flex align-align-items-center">
        <i class="fas fa-arrow-left fa-2x"></i><span class="ms-1">Volver</span>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
